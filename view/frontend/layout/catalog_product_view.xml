<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.form.content">
            <block name="indexiz.sample.product" before="product.info.addtocart" cacheable="false"
                   template="Indexiz_SampleOrder::catalog/product/view/free-sample-button.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Indexiz\SampleOrder\ViewModel\Product\View\FreeSampleButton
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="product.info.options.wrapper.bottom">
            <block name="indexiz.sample.product.additional" before="product.info.addtocart" cacheable="false"
                   template="Indexiz_SampleOrder::catalog/product/view/free-sample-button.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Indexiz\SampleOrder\ViewModel\Product\View\FreeSampleButton
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
